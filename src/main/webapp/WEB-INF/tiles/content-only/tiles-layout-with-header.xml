<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	<!-- layout basic -->
	<definition name="layouts-tiles-content-only-with-header" 		template="/WEB-INF/tiles/content-only/tiles-layouts-with-header.jsp">
		<put-attribute name="head"   	value="/WEB-INF/tiles/content-only/tiles-head.jsp" />
	  	<put-attribute name="body-header"    	value="/WEB-INF/tiles/content-only/tiles-body-header.jsp" />
		<put-attribute name="sidebar"				value="" />
	  	<put-attribute name="page-header"    	value="" />
		
	  	<put-attribute name="content"   	value=""/>
	  	<put-attribute name="footer"    	value="" />
	  	
	  	<put-attribute name="title" expression="${title}"/>
	</definition>
	
	<definition name="/*/*/*.tiles.co.h" extends="layouts-tiles-content-only-with-header">
	  	<put-attribute name="content"   value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />
	</definition>
</tiles-definitions>